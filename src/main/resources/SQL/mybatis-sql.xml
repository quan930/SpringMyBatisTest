<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Message">

    <resultMap id="MessageResult" type="bean.UserMessage">
        <id column="id" property="id" jdbcType="INTEGER"></id>
        <result column="Message" property="Message" jdbcType="VARCHAR"></result>
    </resultMap>

    <select id="queryUserMessage" parameterType="long" resultMap="MessageResult">
        SELECT id,Message FROM user.UserMessage
    </select>

</mapper>